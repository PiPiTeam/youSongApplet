/**index.wxss**/
.page-body{
  background-color: rgb(247, 247, 247);
}
.page-head{
  width: 100%;
  height: 420rpx;
}
.head-img{
  width: 100%;
  height: 321rpx;
}
.page-swiper{
  width: 670rpx;
  position: relative;
  top: -230rpx;
  left: 40rpx;
}
.swiper-item{
  height: 318rpx;
}
.img-banner{
  width: 670rpx;
  height: 320rpx;
}
.popular-courses{
  padding: 0 40rpx;
  margin-top: 20rpx;
}
.popular-title{
  height: 50rpx;
  display: flex;
}
.popular-border{
  width: 8rpx;
  height: 30rpx;
  margin-top: 10rpx;
  border-radius: 4rpx;
  background: #ffc892;
}

.popular-chian{
  width: 144rpx;
  height: 46rpx;
  margin: 0 20rpx;
  color: #2a2b2d;
  font-family: "PingFang-SC-Bold";
  font-size: 36rpx;
  font-weight: 400;
  line-height: 46rpx;
}
.popular-english{
  width: 198rpx;
  height: 30rpx;
  color: #2a2b2d;
  font-family: "PingFang-SC-Medium";
  font-size: 24rpx;
  font-weight: 400;
  line-height: 30rpx;
}

.popular-scroll{
  width: 100%;
  height: 280rpx;
  margin-top: 20rpx;
}
.swiper-courses{
  width: 196rpx;
  height: 250rpx;
  border-radius: 8px;
  background: #ffffff;
  box-shadow: 0px 4rpx 14rpx rgba(0,0,0,0.06);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30rpx;
}
.img-courses{
  width: 110rpx;
  height: 180rpx;
}
.popular-active{
  display: flex;
  justify-content: space-between;
}
.popular-more{
  color: #BDBDBD;
}
.popular-event{
  height: 890rpx;
}
.popular-events{
  width: 100%;
  height: 256rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  padding: 0;
}
.img-events{
  width: 200rpx;
  height: 256rpx;
}
.events-right{
  padding: 40rpx 20rpx;
  width: 430rpx;
  height: 176rpx;
}
.events-title{
  display: flex;
  justify-content: space-between;
  color: #666;
  font-size: 20rpx;
  margin-bottom: 40rpx;
}
.events-header{
  display: flex;
  color: #2A2B2D;
  font-size: 32rpx;
}
.events-tag{
  width: 64rpx;
  height: 28rpx;
}
.events-text{
  color: #666;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.popular-introduction{
  height: 750rpx;
}
.img-introduction{
  margin-top: 16rpx;
  width: 100%;
  height: 316rpx;
}
.introduction-text{
  color: #666;
  font-size: 28rpx;
}
