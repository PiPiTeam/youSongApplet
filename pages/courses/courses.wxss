/* pages/courses/courses.wxss */
.courses-courses {
  padding: 20rpx;
}
.head-courses{
  height: 200rpx;
  display: flex;
  width: 100%;
  justify-content: space-between;
}
.img-courses{
  height: 200rpx;
  width: 20%;
}
.courses-swiper{
  width: 78%;
  height: 200rpx;
}
.swiper-item{
  height: 200rpx;
}
.img-banner{
  width: 100%;
  height: 200rpx;
}
.btn-row {
  display: flex;
  justify-content: flex-end;
}
.btn-row .btn {
  margin: 0;
  margin-top: 20rpx;
  width: 180rpx;
  font-size: 24rpx;
}
.get-phone-row {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.get-phone-row input {
  width: 70%;
  border: 1rpx solid #ccc;
  height: 68rpx;
}
.get-phone-row .submit-phone {
  width: 180rpx;
  margin: 0;
  font-size: 24rpx;
}