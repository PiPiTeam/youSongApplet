/* pages/teacher-list/teacher-list.wxss */
.popular-courses{
  padding: 0 40rpx;
  margin-top: 20rpx;
}
.popular-title{
  height: 50rpx;
  display: flex;
}
.introduction-body {
  margin-top: 10rpx;
}
.popular-border{
  width: 8rpx;
  height: 30rpx;
  margin-top: 10rpx;
  border-radius: 4rpx;
  background: #ffc892;
}

.popular-chian{
  width: 144rpx;
  height: 46rpx;
  margin: 0 20rpx;
  color: #2a2b2d;
  font-family: "PingFang-SC-Bold";
  font-size: 36rpx;
  font-weight: 400;
  line-height: 46rpx;
}
.popular-english{
  width: 198rpx;
  height: 30rpx;
  color: #2a2b2d;
  font-family: "PingFang-SC-Medium";
  font-size: 24rpx;
  font-weight: 400;
  line-height: 30rpx;
}

.popular-scroll{
  width: 100%;
  margin-top: 20rpx;
}
.swiper-courses{
  width: 180rpx;
  height: 230rpx;
  border-radius: 16rpx;
  background: #ffffff;
  box-shadow: 0px 4rpx 14rpx rgba(0,0,0,0.06);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30rpx;
}
.img-courses{
  width: 110rpx;
  height: 180rpx;
}
.popular-active{
  display: flex;
  justify-content: space-between;
}
.popular-more{
  color: #BDBDBD;
}
.popular-student{
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
  justify-content: center;
}
.student-item{
  width: 320rpx;
  height: 200rpx;
  margin: 5rpx;
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
}
.swiper-item-student {
  height: 200rpx;
}
.img-student{
  width: 100%;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
}
.student-title{
  background-color: rgba(0,0,0,0.5);
  color: #ffffff;
  align-items: center;
  text-align: center;
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  line-height: 60rpx;
  height: 60rpx;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  border-radius: 0 0 16rpx 16rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}