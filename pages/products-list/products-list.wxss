/* pages/products-list/products-list.wxss */
.products-box{
  min-height: calc(100vh - 40rpx);
  background-color: rgb(247, 247, 247);
  padding: 20rpx 0;
}
.popular-products{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.swiper-products{
  width: 320rpx;
  height: 440rpx;
  margin: 0 6rpx 12rpx;
  background-color: #FFF;
  border-radius: 16rpx;
}
.products-title{
  font-size: 28rpx;
  color: #2A2B2D;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 10rpx 5%;
  height: 70rpx;
}
.products-img-box {
  width: 100%;
  height: 312rpx;
  text-align: center;
}
.img-products {
  width: 80%;
  height: 80%;
  margin-top: 10%;
}
.products-price{
  color: #FFA042;
  font-size: 34rpx;
  font-weight: 500;
  margin: 0 5%;
}
.price-icon{
  font-size: 24rpx;
}
.popular-bottom{
  width: 100%;
  height: 160rpx;
  position: fixed;
  bottom: -1px;
}
.img-bottom{
  width: 100%;
  height: 160rpx;
}
.introduction-bottom{
  width: 100%;
  position: absolute;
  top: 20%;
  display: flex;
  justify-content: space-around;
  color: #FFC892;
  font-size: 24rpx;
}